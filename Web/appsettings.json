{
  "Slack": {
    "ApiToken": "<your API token here>",
    "AppLevelToken": "<your app-level token here, if you're using socket mode>",
    "SigningSecret": "<your signing secret here>"
  },
  "ChatGPT": {
    "ApiKey" : ""
  },
  "HuggingFace": {
    "ApiKey" : ""
  },
  "SlackBot": {
    "Keywords": {
      "안녕하세요": "안녕하세요! 무엇을 도와드릴까요?",
      "슬랙": "슬랙 봇입니다. 어떤 질문이든 물어보세요!",
      "날씨": "오늘 날씨는 맑고 기온은 25도입니다.",
      "경환": "송경환님은 지코를 닮았고 미남이죠",
      "수현": "채수현님은 첸을 닮았고, 얼짱입니다",
      "수지": ":장수지:",
      "노인": ":송노인:"
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.AspNetCore.HttpLogging.HttpLoggingMiddleware": "Information"
    }
  },
  "App": {
    "Name": "Web",
    "Swagger": {
      "UseSwagger": false,
      "UseSwaggerUi": false,
      "OpenApiInfo": {
        "Title": "Web API",
        "Description": "Web API Docs",
        "Contract": {
          "Name": "Example Contact",
        },
        "License": {
          "Name": "Example License",
        }
      }
    },
    "Logging": {
      "Serilog": {
        "Using": [
          "Serilog.Sinks.Console",
          "Serilog.Sinks.File",
          "Serilog.Sinks.Async",
          "Serilog.Sinks.Elasticsearch"
        ],
        "MinimumLevel": {
          "Default": "Information",
          "Override": {
            // ASP.NET Core 아래 로그는 경고만
            "Microsoft.AspNetCore.Routing.EndpointMiddleware": "Warning",
            "Microsoft.AspNetCore.Mvc.Infrastructure": "Warning",
            // SQL Command 로그를 보고 싶으면 MySqlConnector.MySqlCommand 주석 해제
            // "MySqlConnector.MySqlCommand": "Verbose",
            "MySqlConnector": "Warning"
          }
        },
        "WriteTo:Console": {
          "Name": "Console",
          "Args": {
            "formatter": "Serilog.Formatting.Elasticsearch.ElasticsearchJsonFormatter, Serilog.Formatting.Elasticsearch"
          }
        },
        "WriteTo": [
          {
            "Name": "Elasticsearch",
            "Args": {
              // https://github.com/serilog-contrib/serilog-sinks-elasticsearch
              "nodeUris": "http://localhost:9200",
              "batchPostingLimit": 50,
              "period": 5,
              "queueSizeLimit": "100000"
            }
          }
        ],
        "Enrich": [
          "FromLogContext",
          "WithMachineName",
          "WithEnvironmentName",
          "WithThreadId"
        ],
        "Destructure": [
          {
            "Name": "ToMaximumDepth",
            "Args": {
              "maximumDestructuringDepth": 6
            }
          },
          {
            "Name": "ToMaximumStringLength",
            "Args": {
              "maximumStringLength": 32768
            }
          },
          {
            "Name": "ToMaximumCollectionCount",
            "Args": {
              "maximumCollectionCount": 50
            }
          }
        ]
      }
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "AccountDB": "Server=localhost; Port=3306; Database=AccountDB; Uid=root; Pwd=inzoi!inzoi@; Pooling=true; default command timeout=120;MinimumPoolSize=2;",
    "GameDB": "Server=localhost Port=3306; Database=GameDB; Uid=root; Pwd=inzoi!inzoi@; Pooling=true; default command timeout=120;MinimumPoolSize=2;"
  },
  "MetricsPort": "9001"
}
